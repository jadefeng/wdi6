<h2>Add a new video!</h2>

<form method="post" action="/videos/<%= @video['id'] %>">
	<label for="title"> Title: </label>
	<input id="title" name="title" value="<%= @video['title'] %>">

	<label for="description"> description: </label>
	<input id="Description" name="description" value="<%= @video['family'] %>">

	<label for="URL_code"> URL: </label>
	<input type="url" id="URL_code" name="URL_code" value="<%= @video['family'] %>">

	<label for="genre"> Genre: </label>
	<input id="genre" name="genre" value="<%= @video['family'] %>">

	<button> Update video! </button>
</form>