<div class="video_page">
	<h2><%= @video['title'] %></h2>

	<div class="imbedded_video">
		<iframe width="420" height="315" src="//www.youtube.com/embed/<%= @youtube_id[0] %>" frameborder="0" allowfullscreen></iframe>
	</div>

	<a href=" <%= @video['URL_code'] %> "> Video Link </a>
	<h3>Description: <em> <%= @video['description'] %> </em></h3>
	<h3>Genre: <em> <%= @video['genre'] %> </em></h3>


	<section class="video">
	<div class="delete">
		<a href="/videos/<%= @video['id'] %>/delete">Delete</a>
	</div>
	<div class="edit">
		<a href="/videos/<%= @video['id'] %>/edit">Edit</a>
	</div>
	</section>

</div>
